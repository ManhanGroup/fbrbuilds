<select id="rpa-elect" onchange={{action "selectRpa" value="target.value"}}>
  <option value="">-- Select a Rpa --</option>
  {{#each rpas as |rpa|}}
    <option value={{rpa.id}}>{{rpa.name}}</option>
  {{/each}}
</select>

{{#if sortedCounties}}
  {{county-selector counties=sortedCounties selectedAction=selectedAction getCityBoundary=(action getCityBoundary) updateMunicipality=(action updateMunicipality)}}
{{/if}}