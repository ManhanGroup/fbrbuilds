{{logo-collection small=true}}
{{#overflow-scroll}}
  <form {{action signup on="submit"}}>

    <h2>Signup</h2>

    <div class="input-wrapper">
      <img src="/assets/images/user.svg">
      {{input placeholder="First Name" type="text" value=firstName}}
    </div>

    <div class="input-wrapper">
      <img src="/assets/images/user.svg">
      {{input placeholder="Last Name" type="text" value=lastName}}
    </div>

    <div class="input-wrapper">
      <img src="/assets/images/mail.svg">
      {{input placeholder="Email" type="email" value=username}}
    </div>

    <hr>

    <div class="input-wrapper">
      <img src="/assets/images/lock.svg">
      {{input placeholder="Password" type="password" value=password}}
    </div>

    <div class="input-wrapper">
      <img src="/assets/images/check-square.svg">
      {{input placeholder="Confirm Password" type="password" value=confirmPassword}}
    </div>

    <hr>

    {{#unless muniFailure}}
      <div class="input-wrapper labeled">
        <span>Would you like to request verified status?</span>
        {{#radio-button
          value=""
          groupValue=requesting
        }}
          <span>No</span>
        {{/radio-button}}

        {{#radio-button
          value="mpo"
          groupValue=requesting
        }}
          <span>Yes, as a member of the regional government: French Broad River MPO</span>
        {{/radio-button}}

        {{#radio-button
          value="county"
          groupValue=requesting
        }}
          <span>Yes, as a member of county government</span>
        {{/radio-button}}

        {{#radio-button
          value="municipal"
          groupValue=requesting          
        }}
          <span>Yes, as a member of city or town government</span>
        {{/radio-button}}
      </div>

      {{#if (eq requesting 'county')}}
        <div class="input-wrapper labeled">
          <label>Choose the County you are associated with</label>

          {{#loading-spinner message="Loading Counties" isLoading=isFetching}}
            <select onchange={{action updateCounty value="target.value"}}>
              <option disabled selected>Select County</option>
              {{#each lstcntys.lstcntys as |cnty|}}
                 <option value={{cnty.county}}>{{cnty.namelsad}}</option>
              {{/each}}
            </select>
          {{/loading-spinner}}
        </div>
      {{/if}}
      

      {{#if (eq requesting 'municipal')}}
        <div class="input-wrapper labeled">
          <label>Choose the municipality you are associated with</label>
          {{county-selector counties=lstcntys.lstcntys selectedAction="updateMunicipality" updateMunicipality=(action updateMunicipality)}}   
        </div>
      {{/if}}      

      

    {{/unless}}

    {{#if errorMessage}}
      <div class="error-message">
        {{errorMessage}}
      </div>
    {{/if}}

    <div class="form-footer">
      {{#loading-spinner message=loadingText isLoading=isCreating}}
        <button class='submit {{unless submittable 'disabled'}}' type="submit">Signup</button>
      {{/loading-spinner}}
    </div>

  </form>

  <div class="auth-switch">
    Already have an account?
    {{link-to 'Login here' (query-params panel=null)}}
  </div>
{{/overflow-scroll}}

